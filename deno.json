{
    "version": "1.0.0",
    "permissions": {
        "default": {
            "env": true,
            "net": true,
            "read": true,
            "write": true
        }
    },
    "tasks": {
        "dev": "deno run --watch -P --unstable-temporal ./src/main.ts",
        "scrape": "deno run -P --unstable-temporal ./src/main.ts",
        "server": "deno run -P --unstable-temporal ./src/server/server.ts",
        "test": ""
    },
    "lint": {
        "include": ["src/"],
        "rules": {
            "tags": ["recommended", "jsr"]
        }
    },
    "compilerOptions": {
        "jsx": "precompile",
        "jsxImportSource": "hono/jsx"
    },
    "imports": {
        "@hono/standard-validator": "jsr:@hono/standard-validator@^0.1.5",
        "@hono/swagger-ui": "npm:@hono/swagger-ui@^0.5.2",
        "@hono/zod-openapi": "npm:@hono/zod-openapi@^1.1.3",
        "hono": "jsr:@hono/hono@^4.9.12",
        "@std/async": "jsr:@std/async@^1.0.15",
        "@std/json": "jsr:@std/json@^1.0.2",
        "@std/path": "jsr:@std/path@^1.1.2",
        "@std/streams": "jsr:@std/streams@^1.0.13",
        "ajv": "npm:ajv@^8.17.1",
        "fast-xml-parser": "npm:fast-xml-parser@^5.2.5",
        "ts-json-schema-generator": "npm:ts-json-schema-generator@^2.4.0"
    }
}
